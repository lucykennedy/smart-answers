<% content_for :title do %>
  <% if calculator.eligible_for_winter_fuel_payment? %>
    <%= render partial: 'title_help_with_bills_outcome.govspeak.erb' %>
  <% elsif calculator.circumstances.include?('benefits') %>
    <% if calculator.eligible_for_energy_company_obligation? %>
      <%= render partial: 'title_help_with_bills_outcome.govspeak.erb' %>
    <% else %>
      <%= render partial: 'title_no_help_with_bills_outcome.govspeak.erb' %>
    <% end %>
  <% else %>
    <%= render partial: 'title_no_help_with_bills_outcome.govspeak.erb' %>
  <% end %>
<% end %>

<% content_for :body do %>
  <% if calculator.circumstances.include?('benefits') %>
    <% if calculator.eligible_for_winter_fuel_payment? %>
      <%= render partial: 'winter_fuel_payments.govspeak.erb' %>
    <% end %>
    <% if calculator.eligible_for_warm_home_discount? %>
      <%= render partial: 'warm_home_discount.govspeak.erb' %>
    <% end %>
    <% if calculator.eligible_for_cold_weather_payment? %>
      <%= render partial: 'cold_weather_payment.govspeak.erb' %>
    <% end %>
  <% else %>
    <% if calculator.eligible_for_winter_fuel_payment? %>
      <%= render partial: 'winter_fuel_payments.govspeak.erb' %>
    <% end %>
  <% end %>
  <% if calculator.may_qualify_for_affordable_warmth_obligation? %>
    <%= render partial: 'may_qualify_for_affordable_warmth_obligation.govspeak.erb' %>
  <% end %>
  <% if calculator.circumstances.include?('benefits') or calculator.bills_help? %>

    You can also use this service to [find out how to make your home more energy efficient](/energy-grants-calculator).
  <% end %>
<% end %>
